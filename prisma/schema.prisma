generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Games {
  id            Int     @id @default(autoincrement())
  imageUrl      String?  
  name          String
  developer     String
  year          String
  platform      String?
  description   String?
  categ_id      Int
  category      Categories @relation(fields: [categ_id], references: [id])
  reviews       Reviews[]
}

model Categories {
  id        Int     @id @default(autoincrement())
  name      String
  games     Games[]
}

model Users {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  username  String @unique
  password  String
  reviews   Reviews[]
}

model Reviews {
  id        Int     @id @default(autoincrement())
  content   String
  rating    Decimal
  userId    Int
  user      Users @relation(fields: [userId], references: [id])
  gameId    Int
  game      Games @relation(fields: [gameId], references: [id])
}

