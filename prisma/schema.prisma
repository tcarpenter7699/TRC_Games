generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Games {
  id            Int     @id @default(autoincrement())
  imageUrl      String?  
  name          String
  developer     String
  year          String
  platform      String?
  description   String?
  category      String
}

model Users {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  username  String @unique
  password  String
}



